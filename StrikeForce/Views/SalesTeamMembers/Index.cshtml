@{
  Layout = "_Layout";
}

@using StrikeForce.Models;
@model List<StrikeForce.Models.SalesTeamMember>;

<h1>Team Members</h1>

@if (@Model.Count == 0)
{
  <h3>No team members have been added yet.</h3>
}

<ul>
  @foreach(SalesTeamMember salesTeamMember in Model)
  {
      <li>@Html.ActionLink($"{salesTeamMember.FirstName}", "Details", new { id = salesTeamMember.SalesTeamMemberId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Team Member", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p> 